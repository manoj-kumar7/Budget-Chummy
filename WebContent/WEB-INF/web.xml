<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>BudgetChummy</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>FirstPage.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
  	<servlet-name>firstpage_jsp</servlet-name>
  	<jsp-file>/FirstPage.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>firstpage_jsp</servlet-name>
	<url-pattern>/BC</url-pattern> <!-- Use this URL -->
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login_jsp</servlet-name>
  	<jsp-file>/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>login_jsp</servlet-name>
	<url-pattern>/login</url-pattern> <!-- Use this URL -->
  </servlet-mapping>

  <servlet>
  	<servlet-name>signup_jsp</servlet-name>
  	<jsp-file>/signup.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>signup_jsp</servlet-name>
	<url-pattern>/signup</url-pattern> <!-- Use this URL -->
  </servlet-mapping>

  <servlet>
  	<servlet-name>home_jsp</servlet-name>
  	<jsp-file>/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>home_jsp</servlet-name>
	<url-pattern>/home</url-pattern> <!-- Use this URL -->
  </servlet-mapping>

  <servlet>
  	<servlet-name>createaccount_jsp</servlet-name>
  	<jsp-file>/CreateAccount.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>createaccount_jsp</servlet-name>
	<url-pattern>/CreateAccount</url-pattern> <!-- Use this URL -->
  </servlet-mapping>

  <servlet>
  	<servlet-name>chooseaccount_jsp</servlet-name>
  	<jsp-file>/ChooseAccount.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>chooseaccount_jsp</servlet-name>
	<url-pattern>/ChooseAccount</url-pattern> <!-- Use this URL -->
  </servlet-mapping>

  <servlet>
  	<servlet-name>accountauthentication_jsp</servlet-name>
  	<jsp-file>/AccountAuthentication.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>accountauthentication_jsp</servlet-name>
	<url-pattern>/AccountAuthentication</url-pattern> <!-- Use this URL -->
  </servlet-mapping>

  <session-config>
        <session-timeout>30</session-timeout>
  </session-config>
</web-app>